  body
    section.vh-100(style='background-color: #ffffff')
      .container.py-5.h-100
        .row.d-flex.justify-content-center.align-items-center.h-100
          .row
            .col-md-4.col-lg-4.col-xl-4
              .card(style='color: #000000; border-radius: 30px')
                .card-body.p-4
                  .d-flex
                    h6.flex-grow-1 #{location},#{country}
                    |                     
                    h6 #{time}
                  |                   
                  .d-flex.flex-column.text-center.mt-5.mb-4
                    h6.display-4.mb-0.font-weight-bold(style='color: #1c2331')
                      | #{temperature}&deg;C
                    |                     
                    span.small(style='color: #868b94') #{text}
                  |                   
                  .d-flex.align-items-center
                    .flex-grow-1(style='font-size: 1rem')
                      div
                        i.fas.fa-wind.fa-fw(style='color: #868b94')
                        |                         
                        span.ms-1  #{wind}
                      |                       
                      div
                        i.fas.fa-tint.fa-fw(style='color: #868b94')
                        |                         
                        span.ms-1  #{humidity}
                      |                       
                      div
                        i.fas.fa-sun.fa-fw(style='color: #868b94')
                        |                         
                        span.ms-1  0.2h 
                    |                     
                    div
                      img(src='http:#{icon}', width='100px')
